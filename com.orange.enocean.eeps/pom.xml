<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.orange</groupId>
		<artifactId>enoceanbasedriver</artifactId>
		<version>0.8.0-SNAPSHOT</version>
	</parent>

	<artifactId>enocean.eeps</artifactId>


	<packaging>bundle</packaging>

	<name>${project.artifactId}</name>

	<description>com.orange.enocean.eeps bundle</description>

	<developers>
		<developer>
			<name>Victor PERRON</name>
			<organization>Orange</organization>
			<organizationUrl>orange.com</organizationUrl>
			<email>victor.perron@orange.com</email>
		</developer>
		<developer>
			<name>Antonin Chazalet</name>
			<organization>Orange</organization>
			<organizationUrl>orange.com</organizationUrl>
			<email>antonin.chazalet@orange.com;antonin.chazalet@gmail.com</email>
		</developer>
		<developer>
			<name>Andr√© BOTTARO</name>
			<organization>Orange</organization>
			<organizationUrl>orange.com</organizationUrl>
			<email>andre.bottaro@orange.com</email>
		</developer>
	</developers>

	<build>
		<sourceDirectory>src</sourceDirectory>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-install-plugin</artifactId>
				<version>2.3.1</version>
				<executions>
					<execution>
						<id>install org.osgi.service.enocean maven artifact</id>
						<phase>clean</phase>
						<goals>
							<goal>install-file</goal>
						</goals>
						<configuration>
							<groupId>org.osgi.service</groupId>
							<artifactId>enocean</artifactId>
							<version>1.0.0.201501061602</version>
							<packaging>jar</packaging>
							<file>${pom.basedir}/../maven_dependency_to_be_released/org.osgi.service.enocean-1.0.0.201501061602.jar</file>
						</configuration>
					</execution>
					<execution>
						<id>install comm.rxtx maven artifact</id>
						<phase>clean</phase>
						<goals>
							<goal>install-file</goal>
						</goals>
						<configuration>
							<groupId>driver</groupId>
							<artifactId>rx-tx</artifactId>
							<version>2.1.9</version>
							<packaging>jar</packaging>
							<file>${pom.basedir}/../maven_dependency_to_be_released/driver-rx-tx.jar</file>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>2.5.3</version>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-Activator>${project.groupId}.${project.artifactId}.Activator</Bundle-Activator>
						<Bundle-Copyright>Copyright (C) 2013 - 2015 Orange.</Bundle-Copyright>
						<Bundle-Description>OSGi EnOcean bundle that contained the three
							EEPs that the EnOcean Alliance allowed the project to use.</Bundle-Description>
						<Bundle-License>Eclipse Public License v1.0</Bundle-License>
						<Bundle-ManifestVersion>2</Bundle-ManifestVersion>
						<Bundle-Name>${project.groupId}.${project.artifactId}</Bundle-Name>
						<Bundle-RequiredExecutionEnvironment>OSGi/Minimum-1.1</Bundle-RequiredExecutionEnvironment>
						<Bundle-SymbolicName>${project.groupId}.${project.artifactId}</Bundle-SymbolicName>
						<Bundle-Vendor>Orange</Bundle-Vendor>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
